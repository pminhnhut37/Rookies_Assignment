@*@using Microsoft.AspNetCore.Identity
    @inject SignInManager<IdentityUser> SignInManager
    @inject UserManager<IdentityUser> UserManager*@


@if (User.Identity.IsAuthenticated)
{
    <p class="nav-item">
        <span class="navbar-text text-dark">Hello <a class="text-dark" asp-controller="Account" asp-action="MyProfile">@User.Identity.Name</a>!</span>
    </p>
    <p class="nav-item">
        <a class="nav-link text-dark" asp-controller="Account" asp-action="SignOut">Logout</a>
    </p>
}
else
{
    <p class="nav-item">
        <a class="nav-link text-dark" asp-controller="Account" asp-action="SignIn">Login</a>
    </p>
}

